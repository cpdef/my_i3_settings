#assign [class="[Rr]hythmbox"] 10

# Set Displays:
exec xrandr --output VGA1 --auto --left-of eDP1
exec xrandr --output HDMI1 --auto --right-of eDP1

# Display mode:
bindsym $mod+b mode "$monitor"

mode "$monitor" {
	bindsym h exec exec xrandr --output HDMI1 --auto --right-of eDP1; mode default
	bindsym v exec exec xrandr --output VGA1 --auto --right-of eDP1; mode default
}

